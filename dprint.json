{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "projectType": "openSource",
  "incremental": true,
  "markdown": {
  },
  "rustfmt": {
    "merge_imports": true
  },
  "includes": ["**/*.{md,rs,toml,ts,js,tsx,json}"],
  "excludes": [
    "**/target",
    "waves/src/wallet",
    "waves/build",
    "waves/dist",
    "**/node_modules",
    "extension/dev",
    "extension/dist",
    "extension/build"
  ],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.4.1.wasm",
    "https://plugins.dprint.dev/rustfmt-0.3.0.wasm",
    "https://github.com/thomaseizinger/dprint-plugin-cargo-toml/releases/download/0.1.0/cargo-toml-0.1.0.wasm",
    "https://plugins.dprint.dev/typescript-0.35.0.wasm",
    "https://plugins.dprint.dev/json-0.7.2.wasm"
  ]
}
